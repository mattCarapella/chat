<div class="room-name">
	<p><strong>Room Name:</strong> <%= @chatroom.name %></p>
</div>

<div class="message-window">	
	<div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>' class="messages">
		<% @messages.each do |message| %> 
			<%= render message %>
		<% end %>
	</div>

	<div class="message-form">
		<%= form_for [@chatroom, Message.new] do |f| %>
		  <%= f.text_area :body, rows: 1, class: "form-control", autofocus: true %>
		<% end %>
	</div>

</div>